            }
        ];

        let currentQuestion = 0;
        let score = 0;

        function initQuiz() {
            const container = document.getElementById('questions');
            quizData.forEach((item, index) => {
                const div = document.createElement('div');
                div.className = `question-card ${index === 0 ? 'active' : ''}`;
                div.innerHTML = `
                    <h3 class="text-xl font-bold text-slate-800 mb-6">${index + 1}. ${item.q}</h3>
                    <div class="space-y-3">
                        ${item.options.map((opt, i) => `
                            <div onclick="selectOption(${index}, ${i})" class="option border-2 border-slate-200 rounded-xl p-4 cursor-pointer hover:bg-slate-50 transition flex items-center gap-3" data-idx="${i}">
                                <div class="w-6 h-6 border-2 border-slate-300 rounded-full flex-shrink-0"></div>
                                <span class="text-slate-700">${opt}</span>
                            </div>
                        `).join('')}
                    </div>
                    <div id="rationale-${index}" class="mt-6 p-4 bg-blue-50 border-l-4 border-blue-500 rounded hidden text-sm text-blue-800 italic">
                        <strong>Αιτιολόγηση:</strong> ${item.rationale}
                    </div>
                `;
                container.appendChild(div);
            });
        }

        function selectOption(qIdx, oIdx) {
            const card = document.querySelectorAll('.question-card')[qIdx];
            const options = card.querySelectorAll('.option');
            
            const target = options[oIdx];
            target.classList.toggle('bg-blue-50');
            target.classList.toggle('border-blue-400');
            const circle = target.querySelector('div');
            circle.classList.toggle('bg-blue-500');
            circle.classList.toggle('border-blue-500');
        }

        function checkAnswer() {
            const card = document.querySelectorAll('.question-card')[currentQuestion];
            const options = card.querySelectorAll('.option');
            const selected = Array.from(options).filter(o => o.classList.contains('border-blue-400')).map(o => parseInt(o.getAttribute('data-idx')));
            
            if (selected.length === 0) return;

            const correctIndices = quizData[currentQuestion].correct;
            const isCorrect = JSON.stringify(selected.sort()) === JSON.stringify(correctIndices.sort());

            options.forEach((opt, i) => {
                const idx = parseInt(opt.getAttribute('data-idx'));
                if (correctIndices.includes(idx)) {
                    opt.classList.add('correct');
                } else if (selected.includes(idx)) {
                    opt.classList.add('incorrect');
                }
                opt.style.pointerEvents = 'none';
            });

            document.getElementById(`rationale-${currentQuestion}`).classList.remove('hidden');
            
            if (isCorrect) score++;

            document.getElementById('next-btn').innerText = (currentQuestion === quizData.length - 1) ? "Αποτέλεσμα" : "Επόμενο";
            document.getElementById('next-btn').onclick = () => {
                if (currentQuestion < quizData.length - 1) {
                    changeQuestion(1);
                } else {
                    showResults();
                }
            };
        }

        function changeQuestion(step) {
            const cards = document.querySelectorAll('.question-card');
            cards[currentQuestion].classList.remove('active');
            currentQuestion += step;
            cards[currentQuestion].classList.add('active');

            // Reset UI
            document.getElementById('next-btn').innerText = "Έλεγχος";
            document.getElementById('next-btn').onclick = checkAnswer;
            
            document.getElementById('counter').innerText = `Ερώτηση ${currentQuestion + 1} / 20`;
            document.getElementById('progress').style.width = `${((currentQuestion + 1) / 20) * 100}%`;
            document.getElementById('prev-btn').classList.toggle('hidden', currentQuestion === 0);
        }

        function showResults() {
            document.getElementById('quiz-container').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            const percentage = (score / 20) * 100;
            document.getElementById('score-text').innerHTML = `Σκορ: <strong>${score} / 20</strong> (${percentage}%)<br><br>${percentage >= 80 ? 'Εξαιρετικά! Είσαι έτοιμος για τις εξετάσεις.' : 'Καλή προσπάθεια. Ξαναδές τα SOS σημεία.'}`;
        }

        initQuiz();
    </script>
</body>
</html>
